{
	"singleQuote": true,
	"tabWidth": 4,
	"useTabs": true,
	"semi": true,
	"endOfLine": "crlf",
	"plugins": [
		"prettier-plugin-organize-imports",
		"prettier-plugin-jinja-template"
	],
	"overrides": [
		{
			"files": "*.yaml",
			"options": {
				"tabWidth": 2,
				"useTabs": false,
				"singleQuote": false
			}
		},
		{
			"files": "*.yml",
			"options": {
				"tabWidth": 2,
				"useTabs": false
			}
		},
		{
			"files": "*.md",
			"options": {
				"tabWidth": 2,
				"useTabs": false
			}
		}
	]
}
